{
  "name": "mern-ecom",
  "version": "1.0.0",
  "description": "MERN shopping cart app",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "concurrently --kill-others-on-fail -n \"BACKEND,FRONTEND\" \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/server",
    "client": "wait-on tcp:5000 && npm start --prefix frontend",
    "data:import": "node backend/seeder",
    "data:destroy": "node backend/seeder -d"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/undefinedroot/x0-ecom.git"
  },
  "author": "undefinedroot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/undefinedroot/x0-ecom/issues"
  },
  "homepage": "https://github.com/undefinedroot/x0-ecom#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "mongoose": "^5.10.10"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6",
    "wait-on": "^5.2.0"
  }
}
